// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client-js"
  output     = "../.prisma/client"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

// example table used in the express router example

model MapNode {
  nodeID     String    @id
  xcoord     Float
  ycoord     Float
  floor      String
  building   String
  nodeType   String
  longName   String
  shortName  String
  startNodes MapEdge[] @relation("start")
  endNodes   MapEdge[] @relation("end")
}

model MapEdge {
  edgeID    String  @id
  startNode String
  endNode   String
  start     MapNode @relation("start", fields: [startNode], references: [nodeID])
  end       MapNode @relation("end", fields: [endNode], references: [nodeID])
}

model ServiceRequest {
  date         DateTime @id @default(now())
  typeService  String
  reason       String
  nodeLoc      String
  employeeName String
  progress     Progress
  emp          Employee @relation("employee", fields: [employeeName], references: [displayName])
}

enum Progress {
  Assigned
  InProgress
  Completed
}

model Employee {
  username        String           @id
  password        String
  displayName     String           @unique
  serviceRequests ServiceRequest[] @relation("employee")
}

model HighScore {
  id    Int      @id
  time  DateTime
  score Int
}
